{
    "extends": "tslint:recommended",
    "rules": {
        "member-access": [
            true,
            "no-public"
        ],
        "ordered-imports": [
            true,
            {
                "import-sources-order": "any",
                "named-imports-order": "any"
            }
        ],
        "no-var-requires": false,
        "interface-name": false,
        "no-conditional-assignment": false
    },
    "linterOptions": {
        "exclude": [
            "*.js",
            "bin/*"
        ]
    }
}